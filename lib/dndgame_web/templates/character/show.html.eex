<h1>Show Character</h1>

<ul>

  <li>
    <strong>Ac:</strong>
    <%= Dndgame.Characters.get_ac(@character) %>
  </li>

  <li>
    <strong>Cha:</strong>
    <%= @character.cha %>
  </li>

  <li>
    <strong>Con:</strong>
    <%= @character.con %>
  </li>

  <li>
    <strong>Dex:</strong>
    <%= @character.dex %>
  </li>

  <li>
    <strong>Exp:</strong>
    <%= @character.exp %>
  </li>

  <li>
    <strong>Hp:</strong>
    <%= Dndgame.Characters.get_hp(@character) %>
  </li>

  <li>
    <strong>Initiative:</strong>
    <%= Dndgame.Characters.get_initiative(@character) %>
  </li>

  <li>
    <strong>Int:</strong>
    <%= @character.int %>
  </li>

  <li>
    <strong>Level:</strong>
    <%= Dndgame.Characters.get_level(@character) %>
  </li>

  <li>
    <strong>Mp:</strong>
    <%= Dndgame.Characters.get_mp(@character) %>
  </li>

  <li>
    <strong>Name:</strong>
    <%= @character.name %>
  </li>

  <li>
    <strong>Sp:</strong>
    <%= Dndgame.Characters.get_sp(@character) %>
  </li>

  <li>
    <strong>Str:</strong>
    <%= @character.str %>
  </li>

  <li>
    <strong>Wis:</strong>
    <%= @character.wis %>
  </li>

  <li>
    <strong>Profs:</strong>
    <%= for prof <- Dndgame.Characters.get_profs(@character) do %>
      <p><%= prof %></p>
    <% end %>
  </li>

  <li>
    <strong>Saves:</strong>
    <%= for save <- Dndgame.Characters.get_saves(@character) do %>
      <p><%= save %></p>
    <% end %>
  </li>

  <li>
    <strong>Weapon Profs:</strong>
    <%= for weapon_prof <- Dndgame.Characters.get_weapon_profs(@character) do %>
      <p><%= weapon_prof %></p>
    <% end %>
  </li>

  <li>
    <strong>Armor Profs:</strong>
    <%= for armor_prof <- Dndgame.Characters.get_armor_profs(@character) do %>
      <p><%= armor_prof %></p>
    <% end %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.character_path(@conn, :edit, @character) %></span>
<span><%= link "Back", to: Routes.character_path(@conn, :index) %></span>
