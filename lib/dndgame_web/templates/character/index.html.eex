<h1>Listing Characters</h1>

<table>
  <thead>
    <tr>
      <th>Ac</th>
      <th>Cha</th>
      <th>Con</th>
      <th>Dex</th>
      <th>Exp</th>
      <th>Hp</th>
      <th>Initiative</th>
      <th>Int</th>
      <th>Level</th>
      <th>Mp</th>
      <th>Name</th>
      <th>Sp</th>
      <th>Str</th>
      <th>Wis</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for character <- @characters do %>
    <tr>
      <td><%= character.ac %></td>
      <td><%= character.cha %></td>
      <td><%= character.con %></td>
      <td><%= character.dex %></td>
      <td><%= character.exp %></td>
      <td><%= character.hp %></td>
      <td><%= character.initiative %></td>
      <td><%= character.int %></td>
      <td><%= character.level %></td>
      <td><%= character.mp %></td>
      <td><%= character.name %></td>
      <td><%= character.sp %></td>
      <td><%= character.str %></td>
      <td><%= character.wis %></td>

      <td>
        <%= link "Show", to: Routes.character_path(@conn, :show, character) %>
        <%= link "Edit", to: Routes.character_path(@conn, :edit, character) %>
        <%= link "Delete", to: Routes.character_path(@conn, :delete, character), method: :delete, data: [confirm: "Are you sure?"] %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Character", to: Routes.character_path(@conn, :new) %></span>
